{% extends "../layouts/default.html.njk" %}

{% from "../_macros.njk" import svgIcon %}

{% block header %}{% endblock %}

{% block content %}
  <section class="tc grid mb6 mb7-l">
    <div class="grid-item-center">
      {{ svgIcon(contents, 'jsconf-logo-full', width = 564, height = 84, alt = 'JSConf EU') }}
    </div>
    <p class="grid-item-center">
      June 2nd & 3rd 2018 &mdash; Berlin, Germany
      <br>
      JSConf EU is the labour-of-love conference for the JavaScript community in Europe.
    </p>
    <p class="grid-item-center">
      <a href="https://2019.jsconf.eu/" class="btn buy-ticket">
        Coming back 2019!
      </a>
    </p>
  </section>

  <section class="tc tl-l grid grid-5-4 mb6 mb7-l">
    <h2 class="heading--massive grid-head mt0">
      JS,&nbsp;AR,&nbsp;AI, Performance, Communityâ€¦
    </h2>
    <div class="grid-content">
      <h3 class="heading--spaced mt0">
        Speakers
      </h3>
      <p>
        <a href="/speakers/" class="link--underline">
          Check out the speakers of JSConf EU 2018!
        </a>
      </p>
    </div>
  </section>

  <section class="tc tl-l grid grid-5-4 mb6 mb7-l">
    <h2 class="heading--massive grid-head mt0">
      Diversity,
      Inclusion,
      Opportunity
    </h2>
    <div class="grid-content">
      <h3 class="heading--spaced mt0">
        Scholarships
      </h3>
      <p>
        We invite people from under&shy;represented groups to apply to our scholarship program.
        <a href="/scholarships" class="link--underline">Read about our scholarships</a>
      </p>
    </div>
  </section>

  {% set latest = contents.news._.pages |
         notRedirect |
         notDraft |
         sortObjects('metadata.date', '2017-01-01', 'date') |
         last %}
  <section class="tc tl-l grid grid-4-5 mb6 mb7-l">
    <div class="grid-form-home-coc">
      {{ svgIcon(contents, 'form-home-coc', width = 658, height = 725, svgClass="svg-scale") }}
    </div>
    <h2 class="heading--massive grid-head mt0">
      News
    </h2>
    <div class="grid-content">
      <h3 class="heading--spaced mt0">
        {{ latest.title }}
      </h3>
      <article>
        {{ latest.html | striptags | truncate('300') }}
        <a href="{{ latest.url }}"  class="link--underline">Read more</a>
      </article>
    </div>
  </section>

  <section class="tc tl-l grid grid-5-4 mb6 mb7-l">
    <h2 class="heading--massive grid-head mt0">
      People First. Always.
    </h2>
    <div class="grid-content">
      <h3 class="heading--spaced mt0">
        Code of Conduct
      </h3>
      <p>
        All attendees, speakers, sponsors and volunteers at our conference are required to agree with the following code of conduct. <a href="/code-of-conduct" class="link--underline">Read the Code of Conduct</a>
      </p>
    </div>
  </section>

{% endblock %}
